<!DOCTYPE html>
<html xmlns:og="http://ogp.me/ns#" xmlns:fb="http://www.facebook.com/2008/fbml">
    <head>
    	<title>Emu - Animated Selfie Stickers</title>
        <link rel="stylesheet" type="text/css" href="<%= @css %>/default.css">

        <!-- Mobile screens -->
        <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0, maximum-scale=1.0"/>

        <!-- Facebook App -->
        <meta property="fb:app_id" content="<%= @fb_app_id %>">

        <!-- Facebook Open graph meta data -->
        <meta property="og:image:type" content="image/gif">
        <meta property="og:type" content="video.other">
        <meta property="og:image" content="<%= @gif_url %>"> 
        <meta property="og:image:width" content="240">
        <meta property="og:image:height" content="240">
		<meta property="og:title" content="Emu - Animated Selfie Stickers" />
        <meta property="og:description" content="A gif shared from the Emu app." />
        <meta property="og:site_name" content="Emu">
        <meta property="og:url" content="<%= @gif_url %>">

        <!-- JQuery -->
        <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

        <!-- Some behaviours -->
        <script>
        	$(document).ready(function() {
        		$("#gif")
    				.load(function() { 
        				$('#shares-container').fadeIn();
        				$("#gif").fadeIn();
    				})
    				.error(function() {
    					var gif = $("#gif");
    					gif.unbind("load");
    					gif.unbind("error");
		        		gif.attr("src", "<%= @missing_gif_url %>");
		        		gif.fadeIn();
        				$('#shares-container').fadeOut();
    				});
        	});
        </script>

    </head>
    <body>
        <div id="header">
            <a href="<%= @app_url %>">
                <img id="smalllogo" src="<%= @img %>/emusmalllogo.png" />
            </a>
        </div>
        <div id="container">

    	   <!-- The shared emu -->
           <img id="gif" class="gif" src="<%= @gif_url %>" />

           <!-- Share options -->
           <div id="shares-container" style="display: none;">
                <a class="share s-facebook" href="http://www.facebook.com/sharer/sharer.php?u=<%= @page_url %>" target="_blank"></a>
                <a class="share s-pin" href='http://www.pinterest.com/pin/create/link/?url=<%= @gif_url %>&amp;media=<%= @gif_url %>&amp;description=via Emu' target="_blank"></a>
                <a class="share s-tumblr" href="http://www.tumblr.com/widgets/share/tool?canonicalUrl=<%= @gif_url %>" target="_blank"></a>
                <a class="share s-reddit" href='http://www.reddit.com/submit?url=<%= @gif_url %>' target="_blank"></a>
           </div>

        </div>
        <div id="footer">
            <a href="<%= @app_url %>">
                <img src="<%= @img %>/play-store.png" /><img src="<%= @img %>/app-store.png" /><br />
                <span class="copyright">Â© HOMAGE LTD. 2015</span>
            </a>
        </div>
    </body>
</html>